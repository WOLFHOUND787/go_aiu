# Используем официальный образ Golang
FROM golang:1.20

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем файлы проекта в рабочую директорию
COPY . .

# Скачиваем зависимости
RUN go mod download

# Собираем приложение
RUN go build -o hello-app

# Указываем команду для запуска приложения
CMD ["./hello-app"]

# Открываем порт 8080
EXPOSE 8080
